<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodStore.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 position-fixed container-fluid" style="min-height:100px;background:#00712D;z-index:1000;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-family:Pacifico;font-size:40px;color:orangered;">Food Papi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1 ms-auto">
                        <li class="nav-item ms-lg-auto">
                            <a class="nav-link text-light btn ps-5 pe-5 rounded-0 border-top-0 border-bottom-0 border-start-0 border-end-1 border-light" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i>&nbsp;Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn ps-5 pe-5 rounded-0 border-top-0 border-bottom-0 border-start-0 border-end-1 border-light" asp-area="" asp-page="/Foods/index">
                                <i class="bi bi-egg-fried"></i>&nbsp;Foods
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light btn ps-5 pe-5" asp-area="" asp-page="/FoodCategories/index">
                                <i class="bi bi-tag"></i>&nbsp;Food Categories
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="padding:100px 0 0 0;">
        <main role="main" class="pb-3 container-fluid">
            <div class="container-fluid">
                @RenderBody()
            </div>
            
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:black;">
        <div class="container text-light">
            &copy; 2024 - FoodStore - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>