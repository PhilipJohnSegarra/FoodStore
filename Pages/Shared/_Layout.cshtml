    <header>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel" style="background-color:#00712D;">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarLabel" style="font-family:Pacifico; color:orangered;">Food Papi</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light btn ps-5 pe-5 rounded-0 border-top-0 border-bottom-0 border-start-0 border-end-1 border-light"
                           asp-area="" asp-page="/Index">
                            <i class="bi bi-house-door"></i>&nbsp;Home
