@page
@model FoodStore.Pages.Foods.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Image)
        </dt>
        <dd class="col-sm-10">
            
            @if(Model.Food.Image != null)
            {
                <img style="width:auto;height:100%;object-fit:contain;object-position:center;max-height:300px;" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Food.Image)" class="card-img-top" alt="...">
            }
            else
            {
                <h5>Not Available</h5>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Food.foodId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
