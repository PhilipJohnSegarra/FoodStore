@page
@model FoodStore.Pages.Foods.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].FoodDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Food) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodDescription)
            </td>
            <td>
                 <img style="width:auto;height:100px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Food Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.foodId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.foodId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.foodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div style="display:flex;flex-direction:row;">
    @foreach (var item in Model.Food)
    {

        <div class="card" style="width: 23rem;">
            <img style="width:auto;height:100%;object-fit:cover;object-position:center;max-height:300px;" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.FoodName)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.FoodDescription)</p>
            </div>
        </div>
    }
</div>



